  "scripts": {
    "build": "webpack --mode development",
    "prod": "webpack --mode production",
    "watch": "webpack --watch --mode development",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md}'",
    "prepare": "husky install"
  },
  "repository": {

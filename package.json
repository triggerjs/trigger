    "url": "git+https://github.com/triggerjs/trigger.git"
  },
  "author": "Steven Lei",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/triggerjs/trigger/issues"
  },
  "homepage": "https://github.com/triggerjs/trigger#readme",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@types/webpack-env": "^1.16.3",
    "babel-loader": "^8.2.2",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.5",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4",
    "webpack": "^5.59.0",
    "webpack-cli": "^4.9.1"
  },
  "publishConfig": {
